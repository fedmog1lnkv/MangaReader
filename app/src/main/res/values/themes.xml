<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MangaReader" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Customize your light theme here. -->'
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="App.TextAppearance.MangaTitle" parent="">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="App.TextAppearance.MangaChapters" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="App.TextAppearance.MangaRating" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="App.TextAppearance.MangaDescription" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="App.TextAppearance.MangaDetails.MangaTitle" parent="">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="App.TextAppearance.MangaDetails.MangaDescription" parent="">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="App.TextAppearance.UserName" parent="">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.MangaReader" parent="Base.Theme.MangaReader" />

    <style name="App.ShapeAppearance.Manga.Image" parent="">
        <item name="cornerSize">28dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="App.ShapeAppearance.Avatar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>